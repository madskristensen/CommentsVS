  <Commands package="CommentsVS">
    <Menus>
      <!-- Submenu flyout for Comments settings -->
      <Menu guid="CommentsVS" id="CommentsSubMenu" priority="0x0100" type="Menu">
        <Parent guid="CommentsVS" id="CommentsSubMenuGroup"/>
        <Strings>
          <ButtonText>Comment Studio</ButtonText>
          <CommandName>Comment Studio</CommandName>
          <CanonicalName>.CommentsVS.CommentStudio</CanonicalName>
        </Strings>
      </Menu>
      <!-- Code Anchors Tool Window Toolbar -->
      <Menu guid="CommentsVS" id="CodeAnchorsToolbar" type="ToolWindowToolbar">
        <Strings>
          <ButtonText>Code Anchors Toolbar</ButtonText>
          <CanonicalName>.CommentsVS.CodeAnchorsToolbar</CanonicalName>
        </Strings>
      </Menu>
      <!-- Export Split Button Menu -->
      <Menu guid="CommentsVS" id="ExportSplitButtonMenu" priority="0x0300" type="MenuController">
        <Parent guid="CommentsVS" id="CodeAnchorsExportGroup"/>
        <CommandFlag>IconAndText</CommandFlag>
        <Strings>
          <ButtonText>Export</ButtonText>
          <CanonicalName>.CommentsVS.ExportSplitButtonMenu</CanonicalName>
        </Strings>
