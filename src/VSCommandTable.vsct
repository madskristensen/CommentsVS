        </Strings>
      </Button>
      <!-- Navigate to Previous Anchor -->
      <Button guid="CommentsVS" id="PreviousAnchor" priority="0x0101" type="Button">
        <Parent guid="CommentsVS" id="CommentsAnchorNavGroup"/>
        <Icon guid="ImageCatalogGuid" id="PreviousBookmark" />
        <CommandFlag>IconIsMoniker</CommandFlag>
        <Strings>
          <ButtonText>Previous Anchor</ButtonText>
          <CanonicalName>.CommentsVS.PreviousAnchor</CanonicalName>
          <LocCanonicalName>.CommentsVS.PreviousAnchor</LocCanonicalName>
        </Strings>
      </Button>
      <!-- Refresh Anchors (toolbar button) -->
      <Button guid="CommentsVS" id="RefreshAnchors" priority="0x0100" type="Button">
        <Parent guid="CommentsVS" id="CodeAnchorsToolbarGroup"/>
        <Icon guid="ImageCatalogGuid" id="Refresh" />
        <CommandFlag>IconIsMoniker</CommandFlag>
        <CommandFlag>IconAndText</CommandFlag>
        <Strings>
          <ButtonText>Refresh</ButtonText>
          <CanonicalName>.CommentsVS.RefreshAnchors</CanonicalName>
          <LocCanonicalName>.CommentsVS.RefreshAnchors</LocCanonicalName>
        </Strings>
      </Button>
      <!-- Toggle Group by File (toolbar button) -->
      <Button guid="CommentsVS" id="ToggleGroupByFile" priority="0x0200" type="Button">
        <Parent guid="CommentsVS" id="CodeAnchorsToolbarGroup"/>
        <Icon guid="ImageCatalogGuid" id="GroupByType" />
        <CommandFlag>IconIsMoniker</CommandFlag>
        <CommandFlag>DynamicVisibility</CommandFlag>
        <CommandFlag>IconAndText</CommandFlag>
        <Strings>
          <ButtonText>Group by File</ButtonText>
          <CanonicalName>.CommentsVS.ToggleGroupByFile</CanonicalName>
          <LocCanonicalName>.CommentsVS.ToggleGroupByFile</LocCanonicalName>
        </Strings>
      </Button>
    </Buttons>
  </Commands>

  <CommandPlacements>
    <CommandPlacement guid="CommentsVS" id="ToggleCommentVisibility" priority="0x0100">
      <Parent guid="CommentsVS" id="ToolbarGroup"/>
