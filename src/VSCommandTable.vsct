        <Parent guid="CommentsVS" id="CodeAnchorsSettingsGroup"/>
        <Icon guid="ImageCatalogGuid" id="Settings" />
        <CommandFlag>IconIsMoniker</CommandFlag>
        <Strings>
          <ButtonText>Settings</ButtonText>
          <ToolTipText>Open Comment Studio settings</ToolTipText>
          <CanonicalName>.CommentsVS.ToolbarOpenSettings</CanonicalName>
          <LocCanonicalName>.CommentsVS.ToolbarOpenSettings</LocCanonicalName>
        </Strings>
      </Button>
    </Buttons>
  </Commands>

