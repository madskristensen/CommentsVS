          <LocCanonicalName>.CommentsVS.ShowCodeAnchors</LocCanonicalName>
        </Strings>
      </Button>
      <!-- Navigate to Next Anchor -->
      <Button guid="CommentsVS" id="NextAnchor" priority="0x0100" type="Button">
        <Parent guid="CommentsVS" id="CommentsAnchorNavGroup"/>
        <Icon guid="ImageCatalogGuid" id="NextBookmark" />
        <CommandFlag>IconIsMoniker</CommandFlag>
        <Strings>
          <ButtonText>Next Anchor</ButtonText>
          <CanonicalName>.CommentsVS.NextAnchor</CanonicalName>
